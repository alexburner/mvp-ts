{
  "compileOnSave": true,
  "compilerOptions": {
    // build params
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "moduleResolution": "node",
    "module": "esnext",
    "target": "esnext",
    // quality control
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true
  },
  "include": ["src"]
}
